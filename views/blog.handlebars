<div class="card text-center delete-blog">
    <h2 class="card-header text-center">{{title}}</h2>
    <div class="card-body">
        <h5 class="card-title">{{{get_emoji}}}</h5>
        <p class="card-text">{{content}}</p>
        <p style="font-size:12px;color:blue">Created at: {{format_time date_created}}</p>
        <i class="material-icons d-inline-block align-top" style="font-size:60px;color:blue;">comment</i>
        <div class="dollar-amount">By User: {{user.username}}</div>
        {{!-- <div class="card-footer text-muted">{{format_date date_created}}</div> --}}
    </div>
</div>
