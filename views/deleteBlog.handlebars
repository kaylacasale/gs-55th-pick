{{!-- when user presses individual blog post from dashboard --> option to delete --> handles any changes in title or
content of blog and sends to dashboard.js --}}
<div class="row mt-4">
    <div class="col-md-6">
        <h3>Delete a Blog Post:</h3>
        {{!-- '.blog-list' form data grabbed in public/js/dashboard.js -> delete btn handler--}}
        <form class="form blog-list">
            <div class="form-group">
                <label for="blog-title">Blog title:</label>
                <input class="form-input" type="text" id="blog-title" name="blog-title" {{title}} />
            </div>
            <div class="form-group">
                <label for="blog-content">Blog content:</label>
                {{!-- to populate existing title/content in input area to update blog --}}
                <input class="form-input" type="text" id="blog-content" name="blog-content" {{content}} />
            </div>
            {{!-- <div class="form-group">
                <label for="project-desc">description:</label>
                <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
            </div> --}}
            {{!-- to submit new blog below (on dashboard page) --}}
            {{!-- blog.id? --}}
            <div class="form-group">
                <button class="btn btn-sm btn-danger" data-id="{{id}}">UPDATE</button>
            </div>
            <div class="form-group">
                <button class="btn btn-sm btn-danger" data-id="{{id}}">DELETE</button>
            </div>
        </form>
    </div>
</div>

<script src="/js/blog.js"></script>

