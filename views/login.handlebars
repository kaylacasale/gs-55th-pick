<div class="row">

    <div class="col-md-6">
        <h2>Login</h2>

        <form class="form login-form">
            {{!-- grabs input in public/js/login.js file to handle login form (formLoginHandler) with a POST request
            --}}
            <div class="form-group">
                <label for="username-login">username:</label>
                <input class="form-input" type="text" id="username-login" />
            </div>
            <div class="form-group">
                <label for="password-login">password:</label>
                <input class="form-input" type="password" id="password-login" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">login</button>
            </div>
            <div class="signup-group">
                {{!-- to redirect to signup page if user wants to sign up instead of login --}}
                <a href="/signup">Sign up instead!</a>
                {{!-- <button class="no-button" id="logout">logout</button> --}}
            </div>
        </form>
    </div>



    <script src="./js/login.js"></script>